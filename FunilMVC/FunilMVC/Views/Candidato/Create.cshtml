@{
    ViewBag.Title = "Candidato";
}

<h2>Criar</h2>

<div>
    <form action="/Candidato/Create" method="post">

        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control"
                   maxlength="100" id="nome" name="nome"
                   required />
        </div>

        <div class="form-group">
            <label for="formacao">Formação</label>
            <input type="text" class="form-control"
                   maxlength="100" id="formacao" name="formacao"
                   required />
        </div>

        <div>
            <a class="btn btn-primary" href="/Candidato/Index">Voltar</a>
            <button type="submit" class="btn btn-success">Criar</button>
        </div>
    </form>
</div>