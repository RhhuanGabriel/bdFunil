@model FunilMVC.Models.CANDIDATO

@{
    ViewBag.Title = "Candidato";
}

<h2>Deletar</h2>

<h3>Você realmente deseja deletar?</h3>

<form action="/Candidato/ConfirmDelete?id=@Model.CANID" method="post">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nome
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CANNOME)
            </dd>
            <hr />
            <dt>
                Formação
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CANFORMACAO)
            </dd>
        </dl>
    </div>

    <div class="form-group">
        <a class="btn btn-primary" href="/Candidato/Index">Voltar</a>
        <button class="btn btn-danger" type="submit">Deletar</button>
    </div>
</form>