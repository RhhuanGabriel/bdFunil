@model FunilMVC.Models.CANDIDATO

@{
    ViewBag.Title = "Candidato";
}

<h2>Editar</h2>

<div>
    <form action="/Candidato/Edit?id=@Model.CANID" method="post">

        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control"
                   maxlength="100" id="nome" name="nome" value="@Model.CANNOME"
                   required />
        </div>

        <div class="form-group">
            <label for="formacao">Formação</label>
            <input type="text" class="form-control"
                   maxlength="100" id="formacao" name="formacao" value="@Model.CANFORMACAO"
                   required />
        </div>

        <div>
            <a class="btn btn-primary" href="/Candidato/Index">Voltar</a>
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>
    </form>
</div>