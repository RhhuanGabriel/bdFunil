@{
    ViewBag.Title = "Etapa";
}

<h2>Criar</h2>

<div>
    <form action="/Etapa/Create" method="post">

        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control"
                   maxlength="100" id="descricao" name="descricao"
                   required />
        </div>

        <div class="form-group">
            <label for="seq">SEQ</label>
            <input type="number" class="form-control"
                   id="seq" name="seq"
                   required />
        </div>

        <div>
            <a class="btn btn-primary" href="/Etapa/Index">Voltar</a>
            <button type="submit" class="btn btn-success">Criar</button>
        </div>
    </form>
</div>