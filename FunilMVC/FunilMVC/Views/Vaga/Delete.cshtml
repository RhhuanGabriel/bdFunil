@model FunilMVC.Models.VAGA

@{
    ViewBag.Title = "Vaga";
}

<h2>Deletar</h2>

<h3>Você realmente deseja deletar?</h3>

<form action="/Vaga/ConfirmDelete?id=@Model.VAIID" method="post">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Vaga
            </dt>

            <dd>
                @Html.DisplayFor(model => model.VAINOME)
            </dd>
            <hr />
            <dt>
                Descrição
            </dt>

            <dd>
                @Html.DisplayFor(model => model.VAIDESCRICAO)
            </dd>
            <hr />
            <dt>
                Atribuição
            </dt>

            <dd>
                @Html.DisplayFor(model => model.VAIATRIBUICAO)
            </dd>
            <hr />
            <dt>
                Salário
            </dt>

            <dd>
                R$@Html.DisplayFor(model => model.VAISALARIO)
            </dd>
            <hr />
            <dt>
                Requisito
            </dt>

            <dd>
                @Html.DisplayFor(model => model.VAIREQUISITO)
            </dd>
            <hr />
            <dt>
                Data de cadastro
            </dt>

            <dd>
                @Html.DisplayFor(model => model.VAIDATACADASTRO)
            </dd>
        </dl>
    </div>

    <div class="form-group">
        <a class="btn btn-primary" href="/Vaga/Index">Voltar</a>
        <button class="btn btn-danger" type="submit">Deletar</button>
    </div>
</form>