@model FunilMVC.Models.VAGA

@{
    ViewBag.Title = "Vaga";
}

<h2>Editar</h2>

<div>
    <form action="/Vaga/Edit?id=@Model.VAIID" method="post">

        <div class="form-group">
            <label for="nome">Nome da vaga</label>
            <input type="text" class="form-control"
                   maxlength="500" id="nome" name="nome" value="@Model.VAINOME"
                   required />
        </div>

        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control"
                   maxlength="1000" id="descricao" name="descricao" value="@Model.VAIDESCRICAO"
                   required />
        </div>

        <div class="form-group">
            <label for="atribuicao">Atribuição</label>
            <input type="text" class="form-control"
                   maxlength="1000" id="atribuicao" name="atribuicao" value="@Model.VAIATRIBUICAO"
                   required />
        </div>

        <div class="form-group">
            <label for="salario">Salário</label>
            <input class="form-control"
                   id="salario" name="salario" value="@Model.VAISALARIO"
                   required />
        </div>

        <div class="form-group">
            <label for="requisito">Requisito</label>
            <input type="text" class="form-control"
                   maxlength="1000" id="requisito" name="requisito" value="@Model.VAIREQUISITO"
                   required />
        </div>

        <div class="form-group">
            <label for="data">Data de cadastro</label>
            <input class="form-control"
                   id="data" name="data" value="@Model.VAIDATACADASTRO"
                   required />
        </div>


        <div>
            <a class="btn btn-primary" href="/Vaga/Index">Voltar</a>
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>

    </form>
</div>